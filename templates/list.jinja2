{% block body %}
    <section id="entries">
        {% for entry in entries %}
        <article class="post-listing" id="entry={{entry.id}}">
            <p>{{ entry.created.strftime('%b. %d, %Y') }}</p>
            <h2>{{ entry.title }}</h2>
            <a href="{{ request.route_url('entry', id=entry.id) }}">Read</a>
        </article>
        {% else %}
        <div class="entry">
            <p><em>No entries here so far</em></p>
        </div>
        {% endfor %}
{% endblock %}